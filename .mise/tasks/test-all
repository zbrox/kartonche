#!/usr/bin/env bash
#MISE description="Run all tests (unit + UI)"

set -euo pipefail

# Use IOS_DEVICE if set, otherwise default to iPhone 17 Pro
DEVICE="${IOS_DEVICE:-iPhone 17 Pro}"

xcodebuild test \
  -project "$PROJECT" \
  -scheme "$SCHEME" \
  -destination "platform=iOS Simulator,name=$DEVICE" | xcbeautify
