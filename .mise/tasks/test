#!/usr/bin/env bash
#MISE description="Run unit tests"
#USAGE arg "[test]" help="Specific test to run (e.g., kartoncheTests/DominantColorExtractorTests/testSolidRedImageExtractsNearRed)"

set -euo pipefail

# Use environment variables with sensible defaults
DEVICE="${IOS_DEVICE:-iPhone 16 Pro}"
OS_VERSION="${IOS_VERSION:-26.2}"
ARCH="${IOS_ARCH:-arm64}"
DESTINATION="platform=iOS Simulator,name=$DEVICE,OS=$OS_VERSION,arch=$ARCH"

if [ -n "${usage_test:-}" ]; then
  # Run specific test
  xcodebuild test \
    -project "$PROJECT" \
    -scheme "$SCHEME" \
    -destination "$DESTINATION" \
    -quiet \
    -only-testing:"$usage_test" | xcbeautify
else
  # Run all unit tests
  xcodebuild test \
    -project "$PROJECT" \
    -scheme "$SCHEME" \
    -destination "$DESTINATION" \
    -quiet \
    -only-testing:kartoncheTests | xcbeautify
fi
